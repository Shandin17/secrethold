  "description": "Lightweight Node.js package designed to safeguard secrets.",
  "keywords": ["key", "secret", "holder", "secretholder", "secrethold", "stronghold"],
  "main": "secrethold.js",
  "types": "secrethold.d.ts",
  "files": ["lib/", "secrethold.d.ts"],
  "engines": {
    "node": "18 || 20 || 21 || 22 || 23 || 24"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shandin17/secrethold"
  },
  "bugs": {
    "email": "shandin.va@gmail.com",
    "url": "https://github.com/Shandin17/secrethold/issues"
  },
  "scripts": {
    "test": "npm run lint && npm run types && tap run",
    "types": "tsc -p tsconfig.json",
    "lint": "eslint . && prettier --check \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/.*rc\" \"**/*.ts\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/.*rc\" \"**/*.ts\""
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "eslint": "^8.56.0",
    "eslint-config-metarhia": "^8.2.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tap": "^18.7.0",
    "typescript": "^5.3.3"
  }
}
